    "version": "0.2.0",
    "configurations": [
        // Launch convert.py
        {
            "name": "Python Debugger: Convert JSON",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/convert.py",
            "console": "integratedTerminal",
            "args": ["data/data.json", "-o", "data/output.json"]
        },
        // Launch location_analyzer.py
        {
            "name": "Python Debugger: Location Analyzer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/location_analyzer.py",
            "console": "integratedTerminal",
            "args": ["data/output.json", "-o", "data/analysis.json"]
        },
    ]
}